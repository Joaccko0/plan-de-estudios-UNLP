{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Plan de Estudios UNLP",
  "version": "1.0.0",
  "identifier": "com.joaquinrd.planestudios",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "plugins": {
    "shell": {
      "open": true
    }
  },
  "app": {
    "windows": [
      {
        "title": "Plan de Estudios UNLP - Facultad de Inform√°tica",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "capabilities": ["default"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": "es-ES"
      }
    },
    "linux": {
      "deb": {
        "depends": []
      }
    }
  }
}